        <Button x:Name="BtnStart" Content="Choose Model" HorizontalAlignment="Left" Margin="153,10,0,0" VerticalAlignment="Top" Width="100" Height="49" PreviewMouseDown="BtnStart_PreviewMouseDown" Click="BtnStart_Click"/>
        <Button x:Name="BtnAdvanced" Content="Advanced Mode" HorizontalAlignment="Left" Height="49" Margin="297,10,0,0" VerticalAlignment="Top" Width="100" Click="BtnAdvanced_Click"/>

    </Grid>
</Window>
