        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Test_BarcodeReader"
        mc:Ignorable="d"
        Title="MainWindow" Height="213.02" Width="420.535" Closing="Window_Closing" Loaded="Window_Loaded">
    <Grid>
        <Button x:Name="BtnModel1" Content="Model 1" HorizontalAlignment="Left" VerticalAlignment="Top" Width="100" Margin="15,72,0,0" Height="100" PreviewMouseDown="BtnModel1_PreviewMouseDown" PreviewMouseUp="BtnModel1_PreviewMouseUp"/>
        <Button x:Name="BtnModel2" Content="Model 2" HorizontalAlignment="Left" VerticalAlignment="Top" Width="100" Margin="153,72,0,0" Height="100" PreviewMouseDown="BtnModel2_PreviewMouseDown" PreviewMouseUp="BtnModel2_PreviewMouseUp"/>
